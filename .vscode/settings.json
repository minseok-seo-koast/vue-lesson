{
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.validate": [
        {
            "language": "vue",
            "autoFix": true
        }, //vue 체크
        {
            "language": "javascript",
            "autoFix": true
        }, //자바스크립트 체크
        {
            "language": "html",
            "autoFix": true
        }, //HTML 체크 <div></div> -> <div />
    ],
    "eslint.autoFixOnSave": true,
    "eslint.alwaysShowStatus": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
}